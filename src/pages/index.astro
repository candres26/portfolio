---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SectionContainer from '../components/SectionContainer.astro';
import SocialPill from '../icons/SocialPill.astro';
import GithubIcon from '../icons/Github.astro';
import LinkedinIcon from '../icons/Linkedin.astro';
import MailIcon from '../icons/Mail.astro';
import Experience from '../components/Experience.astro';
import Briefcase from '../icons/Briefcase.astro';
---

<Layout 
    title="Soy Andres Reyes Desarrollador I'm Ready!! - Desarrollador de Software - Especializado en Frontend y Backend Web"
    description="Contrata a Andres Reyes si quieres crear una aplicacion web o movil de alta calidad y mejorar tu presencia o la de tu empresa en tu mercado."
>
    <main class="px-4">
        <SectionContainer class="py-44 pb-24">
            <h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
                Hola, <span class="text-yellow-300 opacity-80">soy Andres</span> 
                <a class="flex items-center"
                        href="https://www.linkedin.com/in/carlosandresreyesandrade" 
                        target="_blank" 
                        rel="noopener"
                        >
                        <Badge>Disponible para trabajar</Badge>
                    </a>
                </h1>
                <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">Desarrollador de Software, <span class="text-yellow-200"> soy </span> <span class="text-blue-800">de</span> <span class="text-red-300">Colombia.</span></h2>

            <nav class="flex gap-4 mt-8 flex-wrap">
                <SocialPill href="https://www.github.com/candres26">
                    <GithubIcon class="size-4 md:size-6" /> GitHub               
                </SocialPill>
                <SocialPill href="https://www.linkedin.com/in/carlosandresreyesandrade">
                    <LinkedinIcon class="size-4 md:size-6" /> LinkedIn
                </SocialPill>
                <SocialPill href="mailto:candresreyesandrade@gmail.com">
                    <MailIcon class="size-4 md:size-6" /> candresreyesandrade@gmail.com
                </SocialPill>
            </nav>
        </SectionContainer>
        <SectionContainer id="experiencia">
            <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
                <Briefcase class="size-7"/>
                Experiencia Laboral
            </h2>
            <Experience
        </SectionContainer>
        
    </main>
</Layout>
