---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SocialPill from '../icons/SocialPill.astro';
import GithubIcon from '../icons/Github.astro';
import LinkedinIcon from '../icons/Linkedin.astro';
import MailIcon from '../icons/Mail.astro';
---

<Layout 
    title="Soy Andres Reyes Desarrollador I'm Ready!! - Desarrollador de Software - Especializado en Frontend y Backend Web"
    description="Contrata a Andres Reyes si quieres crear una aplicacion web o movil de alta calidad y mejorar tu presencia o la de tu empresa en tu mercado."
>
    <main>
        <section class="w-full lg:w-[740px] mx-auto py-44">
            <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
                Hola, <span class="text-yellow-300 opacity-80">soy Andres</span> 
                    <a class="flex items-center"
                        href="https://www.linkedin.com/in/carlosandresreyesandrade" 
                        target="_blank" 
                        rel="noopener"
                    >
                        <Badge>Disponible para trabajar</Badge>
                    </a>
            </h1>
            <h2 class="text-2xl text-wrap">Desarrollador de Software, <span class="text-yellow-200"> soy </span> <span class="text-blue-800">de</span> <span class="text-red-300">Colombia.</span></h2>

            <nav class="flex gap-x-4 mt-8">
                <SocialPill href="https://www.github.com/candres26">
                    <GithubIcon class="w-6 h-6" /> GitHub               
                </SocialPill>
                <SocialPill href="https://www.linkedin.com/in/carlosandresreyesandrade">
                    <LinkedinIcon class="w-6 h-6" /> LinkedIn
                </SocialPill>
                <SocialPill href="mailto:candresreyesandrade@gmail.com">
                    <MailIcon class="w-6 h-6" /> candresreyesandrade@gmail.com
                </SocialPill>
            </nav>
        </section>
    </main>
</Layout>
